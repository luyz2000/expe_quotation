.card
  .card-body
    = form_with(model: @client, local: true, class: "row g-3") do |form|
      - if @client.errors.any?
        .alert.alert-danger
          %h4= pluralize(@client.errors.count, "error")
          %ul
            - @client.errors.full_messages.each do |message|
              %li= message

      .col-md-6
        .mb-3
          = form.label :company_name, class: "form-label"
          = form.text_field :company_name, class: "form-control"
      .col-md-6
        .mb-3
          = form.label :tax_id, class: "form-label"
          = form.text_field :tax_id, class: "form-control"
      .col-md-6
        .mb-3
          = form.label :contact_name, class: "form-label"
          = form.text_field :contact_name, class: "form-control"
      .col-md-6
        .mb-3
          = form.label :contact_email, class: "form-label"
          = form.email_field :contact_email, class: "form-control"
      .col-md-6
        .mb-3
          = form.label :contact_phone, class: "form-label"
          = form.telephone_field :contact_phone, class: "form-control"
      .col-md-6
        .mb-3
          = form.label :client_type, class: "form-label"
          = form.select :client_type, Client.client_types.keys.map {|k| [k.humanize, k]}, {prompt: "Seleccionar tipo"}, {class: "form-select"}
      .col-md-6
        .mb-3
          = form.label :city, class: "form-label"
          = form.text_field :city, class: "form-control"
      .col-md-6
        .mb-3
          = form.label :state, class: "form-label"
          = form.text_field :state, class: "form-control"
      .col-12
        .mb-3
          = form.label :address, class: "form-label"
          = form.text_area :address, class: "form-control", rows: 3

      .col-12
        = form.submit "Guardar", class: "btn btn-primary"
        = link_to "Cancelar", clients_path, class: "btn btn-secondary"