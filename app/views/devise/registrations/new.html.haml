.container.mb-4
  .row.justify-content-center.align-items-center
    .col-md-6.col-lg-5
      .card.shadow-lg.rounded-4.border-0
        .card-body.p-5
          .text-center.mb-5
            .mb-4
              %i.bi.bi-person-plus.text-primary.great-icons
              %h2.fw-bold.text-main Registro de Usuario
            %p.text-muted.text-center Complete los campos para crear su cuenta

          = render "devise/shared/error_messages", resource: resource

          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            .mb-4
              .input-group
                %span.input-group-text
                  %i.bi.bi-person
                = f.text_field :name, autofocus: true, class: "form-control form-control-lg ps-2", placeholder: "Nombre"

            .mb-4
              .input-group
                %span.input-group-text
                  %i.bi.bi-person-vcard
                = f.text_field :username, class: "form-control form-control-lg ps-2", placeholder: "Nombre de usuario"

            .mb-4
              .input-group
                %span.input-group-text
                  %i.bi.bi-envelope
                = f.email_field :email, autocomplete: "email", class: "form-control form-control-lg ps-2", placeholder: "Email"

            .mb-4
              .input-group
                %span.input-group-text
                  %i.bi.bi-lock
                = f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg ps-2", placeholder: "Contraseña"

            .mb-4
              .input-group
                %span.input-group-text
                  %i.bi.bi-lock
                = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg ps-2", placeholder: "Confirmar contraseña"

            .d-grid
              = f.submit "Registrarse", class: "btn btn-secondary"

          .text-center.mt-4
            %p.text-muted
              ¿Ya tienes una cuenta?
              = link_to "Iniciar sesión", new_session_path(resource_name), class: "text-primary text-decoration-none fw-medium"