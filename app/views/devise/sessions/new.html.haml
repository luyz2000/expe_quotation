.container
  .row.justify-content-center.align-items-center
    .col-md-6.col-lg-5
      .card.shadow-lg.rounded-4.border-0
        .card-body.p-5
          .text-center
            %i.bi.bi-person-circle.text-primary.great-icons
            %h1.fw-bold.text-main Bienvenido de nuevo!
            %p.text-muted.text-center Ingrese sus credenciales para continuar

          = render "devise/shared/error_messages", resource: resource

          = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f|
            .mb-4
              .input-group
                %span.input-group-text
                  %i.bi.bi-person
                = f.text_field :login, autofocus: true, autocomplete: "username", class: "form-control form-control-lg ps-2", placeholder: "Usuario o Email"

            .mb-4
              .input-group
                %span.input-group-text
                  %i.bi.bi-lock
                = f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg ps-2", placeholder: "Contraseña"

            .d-flex.justify-content-between.align-items-center.mb-4
              - if devise_mapping.rememberable?
                .form-check
                  = f.check_box :remember_me, class: "form-check-input"
                  = f.label :remember_me, "Recordarme", class: "form-check-label text-muted"
              = link_to "¿Olvidó su contraseña?", new_password_path(resource_name), class: "text-decoration-none text-primary small"

            .d-grid
              = f.submit "Iniciar Sesión", class: "btn btn-secondary"

          .text-center.mt-4
            %p.text-muted
              ¿No tiene una cuenta?
              = link_to "Regístrese aquí", new_registration_path(resource_name), class: "text-primary text-decoration-none fw-medium"